<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add a new campgrounds</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Price" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Description" name="description">
                    </textarea>
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go Back </a>
        </div>


    </div>
</div>
<% include ../partials/footer %>
